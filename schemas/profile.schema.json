{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "My AI README Profile Frontmatter",
  "description": "Schema for YAML frontmatter in My AI README profile markdown files",
  "type": "object",
  "required": ["title", "name", "role", "team"],
  "properties": {
    "title": { "type": "string", "description": "Display name (used by Jekyll)" },
    "name": { "type": "string", "description": "Full name" },
    "role": { "type": "string", "description": "Job title" },
    "business_unit": { "type": "string", "description": "Business unit or org" },
    "team": { "type": "string", "description": "Team name" },
    "pronouns": { "type": "string" },
    "timezone": { "type": "string", "description": "Timezone and working hours" },
    "start_date": { "type": "string", "description": "When they joined" },
    "email": { "type": "string", "format": "email" },
    "linkedin": { "type": "string", "format": "uri" },
    "github": { "type": "string", "description": "GitHub username" },
    "spirit_emoji": { "type": "string", "maxLength": 4 },
    "snack_drink": { "type": "string" },
    "fun_fact": { "type": "string" },
    "communication_style": { "type": "string", "enum": ["Slack-first", "Email", "Face-to-face", "Async-first", "Whatever works"] },
    "productivity_window": { "type": "string", "enum": ["Early bird", "Night owl", "Steady throughout the day", "Depends on coffee"] },
    "feedback_preference": { "type": "string" },
    "superpower": { "type": "string" },
    "energy_drain": { "type": "string" },
    "archetype": { "type": "string", "enum": ["The Architect", "The Connector", "The Shipper", "The Sage", "The Questioner", "The Organizer", "The Night Owl", "The Spark"] },
    "completeness_score": { "type": "integer", "minimum": 0, "maximum": 100 },
    "completeness_level": { "type": "string", "enum": ["Starter", "Explorer", "Pro", "Legend"] },
    "completeness_badge": { "type": "string", "enum": ["üå±", "üó∫Ô∏è", "‚≠ê", "üèÜ"] },
    "version": { "type": "integer", "minimum": 1 },
    "tags": { "type": "array", "items": { "type": "string" } }
  }
}
